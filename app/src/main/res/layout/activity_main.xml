<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:background="@color/colorPrimary">
    
    </LinearLayout>
    
    <cn.imtianx.filtermenu.FilterMenuView
        android:id="@+id/filterMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@color/colorAccent"
        app:maskColor="#88888888"
        app:menuBgColor="@color/white"
        app:menuSelectedIcon="@mipmap/fm_selected_icon"
        app:menuTextSize="13sp"
        app:tabHeight="48dp"
        app:tabBorderWidth="1dp"
        app:menuUnSelectedIcon="@mipmap/fm_unselected_icon"
        app:tabSelectedColor="@color/drop_down_selected"
        app:tabUnselectedColor="@color/drop_down_unselected"
        app:underlineColor="@color/colorAccent">
    
    </cn.imtianx.filtermenu.FilterMenuView>


</FrameLayout>